<%= simple_form_for @code_amphoe, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :province %>
  <%= f.input :code %>
  <%= f.input :name %>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                code_amphoes_path, :class => 'btn' %>
  </div>
<% end %>