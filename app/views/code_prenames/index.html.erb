<%- model_class = CodePrename.new.class -%>
<h1><%=t '.title', :default => "รหัสคำนำหน้าชื่อ (ทั้งภาษาไทย & ภาษาอังกฤษ)" %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:use) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @code_prenames.each do |code_prename| %>
      <tr>
        <td><%= code_prename.code %></td>
        <td><%= code_prename.name %></td>
        <td><%= code_prename.use ? 'ใช้งาน' : 'ไม่ใช้งาน' %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_code_prename_path(code_prename), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      code_prename_path(code_prename),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_code_prename_path,
            :class => 'btn btn-primary' %>
