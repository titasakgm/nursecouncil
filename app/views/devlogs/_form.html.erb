<%= simple_form_for @devlog, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :request, :as => :text, :input_html => { :rows => 5, :style => "width:400px;" } %>
  <%= f.input :fixing, :as => :text, :input_html => { :rows => 5, :style => "width:400px;" } %>
  <%= f.input :url %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                devlogs_path, :class => 'btn' %>
  </div>
<% end %>
