<%- model_class = CodeTambon.new.class -%>
<h1><%=t '.title', :default => "รหัสตำบล" %></h1>
<%= paginate @code_tambons %>
<p>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:province) %></th>
      <th><%= model_class.human_attribute_name(:amphoe) %></th>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @code_tambons.each do |code_tambon| %>
      <tr>
        <td><%= code_tambon.code.to_s[0..1] %>: <%= code_tambon.province %></td>
        <td><%= code_tambon.code.to_s[0..3] %>: <%= code_tambon.amphoe %></td>
        <td><%= code_tambon.code %></td>
        <td><%= code_tambon.name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_code_tambon_path(code_tambon),
                      :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      code_tambon_path(code_tambon),
                      :method => :delete,
                      :confirm => t('.confirm',
                      :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_code_tambon_path,
            :class => 'btn btn-primary' %>
