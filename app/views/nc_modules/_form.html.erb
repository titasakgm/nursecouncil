<%= simple_form_for @nc_module, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :code %>
  <%= f.input :name, :as => :text, :input_html => { :rows => 5, :style => "width:400px;" } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                nc_modules_path, :class => 'btn' %>
  </div>
<% end %>
